<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >


            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <% if @user.has_attribute?(:firstname) %>
                            <%= @user.firstname %>
                        <% else %>
                            <%= 'Sin nombre' %>
                        <% end %>
                        <% if @user.has_attribute?(:lastname) %>
                            <%= @user.lastname %>
                        <% end %>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> 
                            <%= image_tag image_path('open_book.png'), size: "128x128", alt: "Imagen no disponible", class: "img-circle img-responsive" %>
                        </div>
                            <div class=" col-md-9 col-lg-9 "> 
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Usuario</td>
                                            <td><%= @user.username %></td>
                                        </tr>
                                        <tr>
                                            <td>Date of Birth</td>
                                            <td><%= @user.birthdate %></td>
                                        </tr>
                                        <tr>
                                            <tr>
                                                <td>Email</td>
                                                <td><a href="mailto:<%=@user.email %>"><%=@user.email %></a></td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                    </div>
                </div>
                <div class="panel-footer">
                <%= link_to 'Editar', edit_user_registration_path(@user), class: 'btn btn-warning' %>
                <%# link_to 'Eliminar', (@user), class: 'btn btn-danger' %>
                <%# link_to 'Eliminar', user, method: :delete, data: { confirm: 'Estas seguro?' }, :class => 'btn btn-danger btn-block front-page-btn' %>
                <%= link_to 'Ver proyectos', user_projects_path(@user), class: 'btn btn-primary' %>
                </div>

            </div>
        </div>
    </div>
</div>
