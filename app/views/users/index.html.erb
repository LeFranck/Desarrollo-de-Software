<p id="notice"><%= notice %></p>


<div class="row">
    <div class="col-sm-8 col-centered">
        <div class="row page-header" style="margin-top:0px">
            <h1>Listing Users</h1>
        </div>
            <div class="row">
                <ul class="nav nav-tabs" id="tabs">
                    <li class="active">
                        <a href="#Estudiantes" data-toggle="tab">Estudiantes</a>
                    </li>
                    <li>
                        <a href="#Profesores" data-toggle="tab">Profesores</a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <table class="user-list">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Type</th>
                        <th>Email</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Birthdate</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.type %></td>
                            <td><%= user.email %></td>
                            <td><%= user.firstname %></td>
                            <td><%= user.lastname %></td>
                            <td><%= user.birthdate %></td>
                            <td><%= link_to 'Show', user %></td>
                            <td><%= link_to 'Edit', edit_user_registration_path %></td>
                            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<br>
