<div class="row">
    <div class="col-sm-2">
        <div class="sidebar-nav">
            <div class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="visible-xs navbar-brand">Sidebar menu</span>
                </div>
                <div class="navbar-collapse collapse sidebar-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><%= link_to :Todos, {:action => 'index', :category => 0}, remote: true %></li>
                        <% Category.all.each do |category| %>
                            <% if category %>
                                <li id="category"><%= link_to category.name, {:action => 'index', :category => category.id}, remote: true %></li>
                            <% end %>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="row project-title">
            <h1>Proyectos</h1>
        </div>
        <div class="row" style="margin-bottom:10px">
            <% if current_user %>
                <%= link_to 'Nuevo Proyecto', new_project_path, :class => 'btn btn-success btn-block front-page-btn' %>
            <% end %>
        </div>
        <div id="proyectos", data-remote="true">
            <% @projects.each do |project| %>
                <%= render partial: "project", :object => project %>
            <% end %>
        </div>
    <br>
  </div>
</div>
