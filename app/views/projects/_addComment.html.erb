<div class="row">
    <h3 id="AgregarComentario">Agregar Comentario</h3>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="widget-area no-padding blank">
            <div class="status-upload">
                <%= form_for([@project, @project.comments.build]) do |f| %>
                    <div class="field">
                        <%= f.text_area :content %>
                    </div>
                    <div class="actions">
                        <%= f.submit 'Agregar', :class => 'btn btn-success form-submit' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

