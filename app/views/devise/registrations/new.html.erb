<script>$('body').ready(function(){$('body').css({'background-color':'#ccc'})});</script>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
<div class="container">
    <div class="">
        <div class="main-login main-center">
            <div class="panel-title text-center">
                <h2 class="title">Registrar</h2>
                <hr />
            </div>
            <form class="form-horizontal" method="post" action="#">

                <div class="form-group">
                    <%= f.label :Nombre, :class=>"cols-sm-2 control-label" %><br />
                    <div class="cols-sm-10">
                        <div class="field input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            <%= f.text_field :firstname, autofocus: true, :class=>'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :Apelldio, :class=>"cols-sm-2 control-label" %><br />
                    <div class="cols-sm-10">
                        <div class="field input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            <%= f.text_field :lastname, :class=>'form-control' %>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :Usuario, :class=>"cols-sm-2 control-label" %><br />
                    <div class="cols-sm-10">
                        <div class="field input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            <%= f.text_field :username, :class=>'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :email, :class=>"cols-sm-2 control-label" %><br />
                    <div class="cols-sm-10">
                        <div class="field input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            <%= f.email_field :email, :class=>'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :Fecha_Nacimiento, :class=>"cols-sm-2 control-label" %><br />
                    <div class="cols-sm-10">
                        <div class="field input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            <%= f.text_field :birthdate, :class=>'form-control', 'data-provide' => 'datepicker' %>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :ContraseÃ±a, :class=>"cols-sm-2 control-label" %><br />
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
                    <% end %><br />
                    <div class="cols-sm-10">
                        <div class="field input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            <%= f.password_field :password, autocomplete: "off", :class=>'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :Fecha_Nacimiento, :class=>"cols-sm-2 control-label" %><br />
                    <div class="cols-sm-10">
                        <div class="field input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="actions form-group">
                    <%= f.submit "Registrar", :class=> "btn btn-primary btn-lg btn-block login-button"%>
                </div>
            </form>
        </div>
    </div>
</div>

<% end %>
