<script>$('body').ready(function(){$('body').css({'background-color':'#ccc'})});</script>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
  <div class="">
    <div class="main-login main-center">
      <div class="panel-title text-center">
                <h2 class="title">Editar</h2>
                <hr />
      </div>
      <form class="form-horizontal" action="#" method="put">
        <div class="form-group">
          <%= f.label :email %><br />
          <div class="cols-sm-10">
            <div class="field input-group">
              <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
              <%= f.email_field :email, autofocus: true , class: "form-control"%>
            </div>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control" %><br/>

        <div class="form-group">
            <%= f.label :Usuario, :class=>"cols-sm-2 control-label" %><br />
            <div class="cols-sm-10">
                <div class="field input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.text_field :username, :class=>'form-control' %>
                </div>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :Nombre, :class=>"cols-sm-2 control-label" %><br />
            <div class="cols-sm-10">
                <div class="field input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.text_field :firstname, autofocus: true, :class=>'form-control' %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :Apellido, :class=>"cols-sm-2 control-label" %><br />
            <div class="cols-sm-10">
                <div class="field input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.text_field :lastname, :class=>'form-control' %>
                </div>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :Fecha_Nacimiento, :class=>"cols-sm-2 control-label" %><br />
            <div class="cols-sm-10">
                <div class="field input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.text_field :birthdate, :class=>'form-control', 'data-provide' => 'datepicker' %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :Contraseña, :class=>"cols-sm-2 control-label" %><br />
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres minimo)</em><br />
            <% end %>
            <i>(Dejar en blanco si no desea cambiarla)</i><br/>
            <div class="cols-sm-10">
                <div class="field input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.password_field :password, autocomplete: "off", :class=>'form-control' %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :Confirmar_Contraseña, :class=>"cols-sm-2 control-label" %><br />
            <div class="cols-sm-10">
                <div class="field input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>'form-control' %>
                </div>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :Contraseña_Actual, :class=>"cols-sm-2 control-label" %><br />
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres minimo)</em><br />
            <% end %>
            <i>(Necesitas tu contraseña para confirmar los cambios)</i><br/>
            <div class="cols-sm-10">
                <div class="field input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.password_field :current_password, autocomplete: "off", :class=>'form-control' %>
                </div>
            </div>
        </div>

        <div class="actions form-group">
            <%= f.submit "Actualizar", :class=> "btn btn-primary btn-lg btn-block login-button"%>
        </div>
      <% end %>

      </form>

      <h3>Cancelar Suscripción</h3>

      <p>No estás conforme? <%= button_to "Eliminar Cuenta", registration_path(resource_name), data: { confirm: "¿Estás Seguro?" }, method: :delete %></p>

      <%= link_to "Atrás", :back %>
    </div>
  </div>
</div>
